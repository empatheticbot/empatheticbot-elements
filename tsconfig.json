{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2020",
    "lib": ["dom", "dom.Iterable", "es2020"],
    "declaration": true,
    "declarationMap": true,
    "rootDir": "./src",
    "strict": true,
    "strictPropertyInitialization": false,
    "strictFunctionTypes": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "removeComments": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "plugins": [{"name": "ts-lit-plugin", "strict": true, "globalTags": ["path"], "globalAttributes": ["d", "stroke-dasharray", "stroke-linecap", "stroke-width", "stroke", "width"] }]
  },
  "include": ["src/**/*.ts"],
  "ignore": ["src/**/*.test.ts"]
}
